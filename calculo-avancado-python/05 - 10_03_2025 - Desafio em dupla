minha lista\n","        if (titulo == livro[\"Título\"]):\n","            encontrado = True\n","            acervo.remove(livro)\n","            print(\"\\nLivro removido com sucesso.\\n\")\n","            break\n","    if not encontrado:\n","      print(f\"\\nO livro '{titulo}' não foi encontrado.\\n\")\n","\n","# Terceiro passo:\n","# 3. Criar uma função buscar_por_categoria(acervo, categoria) que retorna uma lista de livros de uma determinada categoria.\n","\n","def buscar_por_categoria(acervo, categoria):\n","    print(f\"\\n>> Livros da categoria '{categoria}'\\n\")\n","    encontrado = False\n","    for livro in acervo:\n","        if categoria == livro[\"Categoria\"]:\n","          encontrado = True\n","          print(f\"\"\"Livro: {livro[\"Título\"]}\n","Autor: {livro[\"Autor\"]}\n","Categoria: {livro[\"Categoria\"]}\\n\"\"\")\n","\n","    if not encontrado:\n","        print(\"Não foi encontrado nenhum livro nessa categoria.\\n\")\n","\n","# Quarto passo:\n","# 4. Criar uma função listar_livros(acervo) que exibe todos os livros cadastrados.\n","\n","def listar_livros(acervo):\n","    print(\"\\n>> Livros cadastrados:\\n\")\n","    encontrado = False\n","    for livro in acervo:\n","        encontrado = True\n","        print(f\"\"\"Livro: {livro[\"Título\"]}\n","Autor: {livro[\"Autor\"]}\n","Categoria: {livro[\"Categoria\"]}\\n\"\"\") # {} = lista; [] = dicionário\n","\n","    if not encontrado:\n","        print(\"Não foi encontrado nenhum livro no acervo.\\n\")\n","\n","# Quinto passo:\n","# 5. O programa deve rodar em um loop onde o usuário pode escolher entre adicionar, remover, buscar, listar ou sair.\n","\n","opcao = -1  # Inicializa com um valor que permita entrar no loop\n","\n","print(\"== Bem vindo! ==\")\n","\n","while opcao != 0:\n","  print(\"\"\"Escolha uma opção:\n","1. Adicionar\n","2. Remover\n","3. Buscar\n","4. Listar\n","0. Sair\"\"\")\n","  opcao = int(input(\"Digite a opção desejada: \"))\n","  if (opcao == 0):\n","        print(\"\\nVolte sempre!\")\n","        break\n","  elif (opcao == 1):\n","      print(\"\\n>> Você está adicionando um livro.\\n\")\n","      titulo = input(\"1. Adicione o título do livro: \")\n","      autor = input(\"2. Adicione o nome do autor: \")\n","      categoria = input(\"3. Adicione a categoria: \")\n","\n","      adicionar_livro(acervo, titulo, autor, categoria)\n","  elif (opcao == 2):\n","      titulo = input(\"Digite o título do livro que você deseja remover: \")\n","      remover_livro(acervo, titulo)\n","  elif (opcao == 3):\n","      categoria = input(\"Digite a categoria do livro: \")\n","      buscar_por_categoria(acervo, categoria)\n","  elif (opcao == 4):\n","      listar_livros(acervo)\n","  else:\n","      print(\"Opção inválida, tente novamente.\")"]}]}